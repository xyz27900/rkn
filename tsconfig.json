{
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
